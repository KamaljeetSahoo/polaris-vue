{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/classes/*.json",
    "src/**/*",
    "types/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "isolatedModules": false,
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
