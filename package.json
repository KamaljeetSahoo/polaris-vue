{
  "name": "polaris-vue",
  "version": "0.1.0",
  "description": "Shopify Polaris UI library for Vue 2",
  "author": {
    "name": "Qikify"
  },
  "keywords": [
    "polaris",
    "shopify polaris",
    "polaris-vue"
  ],
  "main": "dist/polaris-vue.js",
  "files": [
    "dist",
    "package.json",
    "LICENCE",
    "README.md"
  ],
  "scripts": {
    "serve": "yarn run copy-polaris-tokens && vue-cli-service serve",
    "build": "yarn run copy-polaris-tokens && vue-cli-service build --target lib --name polaris-vue ./src/polaris-vue.ts",
    "lint": "vue-cli-service lint",
    "storybook": "yarn run copy-polaris-tokens && start-storybook -p 6006",
    "build-storybook": "yarn run copy-polaris-tokens && build-storybook",
    "roll": "yarn run copy-polaris-tokens && rollup --config ./build/rollup.config.js",
    "roll-serve": "yarn run copy-polaris-tokens && rollup --config ./build/rollup-serve.config.js --watch",
    "copy-polaris-tokens": "rimraf ./node_modules/polaris-react/src/styles/polaris-tokens && shx cp -r ./node_modules/@shopify/polaris-tokens/dist ./node_modules/polaris-react/src/styles/polaris-tokens"
  },
  "dependencies": {
    "@shopify/polaris-tokens": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.3.12",
    "@storybook/vue": "^6.3.12",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-loader": "^8.2.3",
    "change-case": "^4.1.2",
    "css-loader": "^6.5.1",
    "eslint": "7.14.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-vue": "^8.1.0",
    "node-sass": "^6.0.1",
    "polaris-react": "https://github.com/Shopify/polaris-react.git",
    "postcss": "^7.0.18",
    "postcss-modules": "^3.1.0",
    "pug-plain-loader": "^1.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "rollup-plugin-typescript2": "^0.31.0",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-vue": "^6.0.0",
    "rollup-watch": "^4.3.1",
    "sass": "~1.32.13",
    "sass-loader": "^8.0.2",
    "shx": "^0.3.3",
    "typescript": "~4.1.5",
    "typescript-plugin-css-modules": "^3.4.0",
    "vue": "^2.6.14",
    "core-js": "^3.6.5",
    "vue-property-decorator": "^9.1.2",
    "vue-class-component": "^7.2.3",
    "vue-css-modules": "^1.2.0",
    "vue-loader": "^15.9.8",
    "vue-router": "^3.5.3",
    "vue-template-compiler": "^2.6.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qikify/polaris-vue.git"
  },
  "bugs": {
    "url": "https://github.com/qikify/polaris-vue/issues"
  },
  "homepage": "https://github.com/qikify/polaris-vue#readme",
  "license": "MIT"
}
