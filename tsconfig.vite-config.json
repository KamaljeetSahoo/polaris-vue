{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "vite.config.*",
    "package.json",
    // "src/polaris-vue.ts",
    // "src/components/**/*",
    // "src/classes/*.json",
    "src/**/*",
    // "src/config/*.ts",
    "types/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node", "vite/client"],
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
}
